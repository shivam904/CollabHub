{
  "name": "backend",
  "version": "1.0.0",
  "description": "CollabHub Backend API",
  "main": "index.js",
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js",
    "health": "node health-check.js",
    "test:db": "node quick-db-test.js",
    "test:sync": "node test-file-sync.js",
    "cleanup": "node cleanup-container.js",
    "clear-workspace": "node clear-workspace.js",
    "kill": "taskkill /f /im node.exe 2>nul || pkill -f node 2>/dev/null || true",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t collabhub-backend:latest .",
    "docker:build:terminal": "docker build -f Dockerfile.terminal -t collabhub-dev-env:latest .",
    "docker:build:production": "docker build -f Dockerfile.production -t collabhub-backend:production .",
    "docker:rebuild": "docker rmi collabhub-dev-env:latest 2>/dev/null || true && npm run docker:build:terminal"
  },
  "keywords": [
    "collaboration",
    "coding",
    "api",
    "express",
    "mongodb",
    "real-time",
    "file-management"
  ],
  "author": "CollabHub Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "chokidar": "^3.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^4.0.7",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.1",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "redis": "^4.6.0",
    "socket.io": "^4.8.1",
    "tar-stream": "^3.1.7",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^9.29.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
